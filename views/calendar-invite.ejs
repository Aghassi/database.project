<!-- views/profile.ejs -->
<!doctype html>
<html>
<head>
	<title>EECS 341 Authentication Calendar</title>
	<!-- bootstrap CSS -->
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <style>
		body 		{ padding-top:80px; word-wrap:break-word; }
	</style>
	<!-- datetime Picker -->
	<link rel="stylesheet" href="https://unpkg.com/flatpickr/dist/flatpickr.min.css">
    <script src="https://unpkg.com/flatpickr"></script>
</head>
<body>
<div class="container">
	<form enctype="application/json" action="/calendar/add" method="POST" >
    <h2 class="">Invite User to ''</h2>
    <input name="event_id" type="hidden" class="form-control" value=""><br>
    <p>
       <% for (var i = 0; i < result.length; i++) { %> 
            <input type="checkbox" name="invitee" value="<%= result[i].user_id %>"> <%= result[i].name %> (<%= result[i].title %> at <%= result[i].dept %>)<br>
       <% } %>
    </p>
    <input type="add" class="btn btn-default" value="Add to invites list"/>
    <input type="submit" class="btn btn-default" value="Submit"/>
  </form>
</div>
</body>
    <script>
        flatpickr(".flatpickr", {
        enableTime: true
        });
    </script>
</html>
